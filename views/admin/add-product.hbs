<main>
    <form class="product-form" action="/admin/{{#if editing}}edit-product{{else}}product{{/if}}" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="hidden" name="prodId" id="prodId" value="{{#if editing}}{{product.id}}{{/if}}" />

            <input type="text" name="title" id="title" value="{{#if editing}}{{product.title}}{{/if}}" />
        </div>
        <div class="form-control">
            <label for="title">Image Url</label>
            <input type="text" name="imageUrl" id="imageUrl"
                value="{{#if editing}}{{product.imageUrl}}{{else}}{{/if}}" />
        </div>
        <div class=" form-control">
            <label for="title">Price</label>
            <input type="number" name="price" id="price" value="{{#if editing}}{{product.price}}{{else}}  {{/if}}" />
        </div>
        <div class=" form-control">
            <label for="title">Description</label>
            <textarea type="text" name="description" id="description"
                rows="5">{{#if editing}}{{product.description}}{{else}}{{/if}}</textarea>

        </div>
        <button class=" btn" type="submit">{{#if editing}}update product{{else}}Add product{{/if}}</button>
    </form>
</main>