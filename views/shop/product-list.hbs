<main>
    {{#if hasProducts}}
    <div class="grid">
        {{#each prods}}
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">{{this.dataValues.title}}</h1>
            </header>
            <div class="card__image">
                <img src={{this.dataValues.imageUrl}} alt="A Book">
            </div>
            <div class="card__content">
                <h2 class="product__price">$ {{this.dataValues.price}}</h2>
                <p class="product__description">{{this.dataValues.description}}!
                </p>
            </div>
            <div class="card__actions">
                <a class="btn" href="/product/{{this.dataValues.id}}">Detail</a>
                <form action="/cart" method="POST">
                    <input type="hidden" name="productId" value={{this.dataValues.id}}>
                    <button class="btn" type="submit">Add to Cart</button>

                </form>
            </div>
        </article>
        {{/each}}
    </div>
    {{else }}
    <h1>No Products found!-</h1>
    {{/if }}
</main>